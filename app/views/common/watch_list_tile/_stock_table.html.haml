#watch-list-tile-stock-table
  .table-responsive.mb-3
    %table.table.table-hover.w-100.table-sm.table-striped
      %thead
        %tr
        %th Sym/Name
        %th Price
        %th Chg
        %th= "%Chg"

      %tbody
        - stocks.each do |stock|
          %tr
            %td= stock_information_link_with_company_name(stock.company)
            %td.font-weight-bold= stock.price
            %td.font-weight-bold= stock.change
            %td.font-weight-bold= stock.change_percent

      %tfoot
        %tr
          %td.text-right{colspan: 4}= "Updated #{time_ago(DateTime.now)}".html_safe

:javascript
  $(".timeago").timeago();
