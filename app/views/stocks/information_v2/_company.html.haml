.section-title
  .title Company Profile

%table.table.table-sm.table-hover
  %thead
    %tr
      %th Employees
      %th Website
      %th Address
  %tbody
    %tr
      %td= company.employees
      %td= link_to company.website, company.website, target: '_blank'
      %td= company.address&.formatted

.section-title
  .title Description
.small= company.description

= render partial: 'stocks/information_v2/company_executive', locals: { executives: company.executives }
