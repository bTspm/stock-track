= form_for :session, url: session_path do |form|
  .text-field.form-group
    = form.label :email
    = form.text_field :email, type: 'email', class: "form-control", required: true
  .password-field.form-group
    = form.label :password
    = form.password_field :password, class: "form-control", required: true
  .submit-field
    = form.submit "Sign In", class: "form-control btn btn-primary btn-block mb-3"
  .text-center= link_to t(".forgot_password"), new_password_path

  .other-links.text-center
    - if Clearance.configuration.allow_sign_up?
      %p.small Or
      = link_to t(".sign_up"), sign_up_path, class: "mb-3 btn btn-success form-control"
