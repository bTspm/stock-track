.jumbotron.jumbotron-fluid
  .container
    .row
      .col-12.col-sm-8.col-md-6.col-lg-4.offset-sm-2.offset-md-3.offset-lg-4
        #clearance.password-reset
          %h2= t(".title")
          %p= t(".description")
          = form_for :password, url: passwords_path do |form|
            .text-field.form-group
              = form.label :email
              = form.text_field :email, type: 'email', class: "form-control", required: true
            .submit-field
              = form.submit "Reset Password", class: "form-control btn btn-primary btn-block mb-3"
